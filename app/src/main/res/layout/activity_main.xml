<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinksky"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cityFinder"
        android:layout_marginBottom="956dp"
        android:orientation="vertical">


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cityFinder"
        android:layout_width="66dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="526dp"
        android:background="@drawable/ic_baseline_search_24" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-1dp"
        app:menu="@menu/bottom_navmenu"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="325dp"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="-60dp"
        android:src="@drawable/finding">

    </ImageView>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="392dp"
        android:layout_height="119dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="180dp"
        android:paddingStart="150dp"
        android:text="0Â°C"
        android:textColor="#ffffff"
        android:textSize="70sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/weatherCondition"
        android:layout_width="785dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cityFinder"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-220dp"
        android:layout_marginEnd="-24dp"
        android:layout_marginBottom="-360dp"
        android:paddingStart="150sp"
        android:text="Condition"
        android:textColor="#ffffff"
        android:textSize="30sp">

    </TextView>

    <TextView
        android:id="@+id/cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-130dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="950dp"
        android:paddingStart="150sp"
        android:text="City Name"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="bold">

    </TextView>


</RelativeLayout>